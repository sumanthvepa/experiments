.PHONY: all clean \
  basics basics-clean \
  cwd cwd-clean \
  explore_modules explore_modules-clean \
  explore_printf explore_printf-clean \
  gcd gcd-clean \
  lexical_cast lexical_cast-clean \
  number_commas number_commas-clean \
  read_text_file read_text_file-clean \
  stdlibraries stdlibraries-clean \
  userand userand-clean \

all: \
  basics \
  cwd \
  explore_modules \
  explore_printf \
  gcd \
  lexical_cast \
  number_commas \
  read_text_file \
  stdlibraries \
  userand

basics:
	$(MAKE) -C basics all

cwd:
	$(MAKE) -C cwd all

explore_modules:
	$(MAKE) -C explore_modules all

explore_printf:
	$(MAKE) -C explore_printf all

gcd:
	$(MAKE) -C gcd all

lexical_cast:
	$(MAKE) -C lexical_cast all

number_commas:
	$(MAKE) -C number_commas all

read_text_file:
	$(MAKE) -C read_text_file all

stdlibraries:
	$(MAKE) -C stdlibraries all

userand:
	$(MAKE) -C userand all

# Clean everything
clean: \
  basics-clean \
  cwd-clean \
  explore_modules-clean \
  explore_printf-clean \
  gcd-clean \
  lexical_cast-clean \
  number_commas-clean \
  read_text_file-clean \
  stdlibraries-clean \
  userand-clean 

basics-clean:
	$(MAKE) -C basics clean

cwd-clean:
	$(MAKE) -C cwd clean

explore_modules-clean:
	$(MAKE) -C explore_modules clean

explore_printf-clean:
	$(MAKE) -C explore_printf clean

gcd-clean:
	$(MAKE) -C gcd clean

lexical_cast-clean:
	$(MAKE) -C lexical_cast clean

number_commas-clean:
	$(MAKE) -C number_commas clean

read_text_file-clean:
	$(MAKE) -C read_text_file clean

stdlibraries-clean:
	$(MAKE) -C stdlibraries clean

userand-clean:
	$(MAKE) -C userand clean
